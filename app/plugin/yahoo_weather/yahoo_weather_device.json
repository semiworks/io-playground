{
    "name"       : "Yahoo Weather",
    "description": "Fetch Yahoo Weather data",

    "properties" : {
        "location": {
            "type"   : "string",
            "default": "Erfurt"
        },
        "interval": {
            "type":    "number",
            "default": 300
        },

        "wind": {
            "type"      : "object",
            "properties": {
                "chill": {
                    "type": "number"
                },
                "direction": {
                    "type": "number"
                },
                "speed": {
                    "type": "number"
                }
            }
        },
        "humidity": {
            "type"    : "number",
            "readonly": true
        },
        "visibility": {
            "type"    : "number",
            "readonly": true
        },
        "pressure": {
            "type"    : "number",
            "readonly": true
        },

        "sunrise": {
            "type"    : "time",
            "readonly": true
        },
        "sunset": {
            "type"    : "time",
            "readonly": true
        },

        "temperature": {
            "type"    : "number",
            "readonly": true
        },
        "text": {
            "type"    : "string",
            "readonly": true
        },

        "forecast": {
            "type"    : "list",
            "items": {
                "type"    : "object",
                "readonly": true,

                "properties": {
                    "date": {
                        "type"    : "date",
                        "readonly": true
                    },
                    "high": {
                        "type"    : "number",
                        "readonly": true
                    },
                    "low": {
                        "type"    : "number",
                        "readonly": true
                    },
                    "text": {
                        "type"    : "string",
                        "readonly": true
                    }
                }
            }
        }
    },

    "actions": {
        "trigger": {
            "description": "trigger an update.",
            "parameters": {
            },
            "return": {
            }
        }
    },

    "events": {
        "updated": {
            "description": "weather data fetched from yahoo"
        }
    }
}
